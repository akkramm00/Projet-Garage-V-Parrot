{% extends 'base.html.twig' %}

{% block title %}Garage.V.Parrot - Modification de l'utilisateur !{% endblock %}

{% block body %}

    <style>
    body{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .bg {
        background: var(--main);
        padding: 5rem;
        box-shadow: var(--box_shadow);
        border-radius: 1rem;
    }

    .bg:hover {
        background: #000;
        color:white;
    }
    .banner{
        height:760px;
        background:linear-gradient(rgba(0, 0, 0,.1),rgba(0, 0, 0,.1)),url(https://images.alphacoders.com/717/thumbbig-717700.webp) center center fixed no-repeat;
        background-size:cover;
        
    }

</style>
<body>
    <div class="container-fluid banner">
    <div class="container my-5">
        <div class="row  d-flex justify-content-center align-items-center my-5">
        <div class="col-sm-12 col-md-10 my-5">

            <div class="row my-5">
            </div>
            <div class="row my-5">
               <h1 class="mt-4 text-center heading fs-1">MODIFICATION DU MOT DE PASSE DE L'UTILISATEUR</h1>

               {# read and display just one flash message type #}
               {% for message in app.flashes('success') %}
               <div class="alert alert-success mt-4">
                {{ message}}
               </div>
               {% endfor %}

            </div>
            <div class="row bg my-5">
   
                {{ form_start(form) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    {{ form_row(form.newPassword) }}
                    {{ form_row(form.submit) }}
                {{ form_end(form) }}

            </div>

        </div>
        </div>              
    </div>
  </div>
</body>

{% endblock %}
