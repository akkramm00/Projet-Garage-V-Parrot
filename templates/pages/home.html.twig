{% extends 'base.html.twig' %}

{% block title %}Garage.V.Parrot !
{% endblock %}

{% block body %}

	{% block login %}
		{% include "partials/_login.html.twig" %}
	{% endblock %}
	
	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center fs-4 mt-4">
			{{ message}}
		</div>
	{% endfor %}

	{% for message in app.flashes('warning') %}
		<div class="alert alert-warning  text-center mt-4">
			{{ message}}
		</div>
	{% endfor %}

	<!--Home Section Start-->
	<section id="Home" class="home">
		<h3 data-speed="-2" class="homeParalexEffect">
			<span>G</span>.ParroT</h3>
		<img data-speed="5" class="homeParalexEffect" src="{{ asset('images/Présentation2.jpg') }}" alt="">
	</section>
	<!--Home Section End-->

	<!-- Icons Container Start-->
	<section class="iconsContainer">
		<div class="icons">


			<i class="fas fa-home"></i>
			<div class="content">
				<h3>100+</h3>
				<p>Branches</p>
			</div>
		</div>

		<div class="icons">
			<i class="fas fa-home"></i>
			<div class="content">
				<h3>5800+</h3>
				<p>Voitures Vendues</p>
			</div>
		</div>

		<div class="icons">
			<i class="fas fa-home"></i>
			<div class="content">
				<h3>2560+</h3>
